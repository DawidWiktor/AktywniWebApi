  crossorigin="anonymous"></script>
</head>

<body>

<div class="row">
                        <div class="offset-md-2 col-md-2 modal_label--title">Login:</div>
                        <div class="mdl-textfield mdl-js-textfield col-sm-6  form-inline">
                            <input class="mdl-textfield__input modal_input" placeholder="Login" type="text" id="signINLogin">
                            <label class="mdl-textfield__label modal_label--underline" for="signINLogin">Login</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="offset-md-2 col-md-2 modal_label--title">Hasło:</div>
                        <div class="mdl-textfield mdl-js-textfield col-sm-6  form-inline">
                            <input class="mdl-textfield__input modal_input" placeholder="Hasło" type="password" id="signINPassword">
                            <label class="mdl-textfield__label modal_label--underline" for="signINPassword">Hasło</label>
                        </div>
                    </div>

<button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect modal_button" type="submit"
                                id="signINButton">
                            Zaloguj się
                        </button>
</body>

<script>
// logowanie
            $("#signINButton").click(function () {
                var login = document.getElementById("signINLogin").value;
                var password = document.getElementById("signINPassword").value;
               
                

                $.post("/Logowanie/Logowanie",
                    {
                        Login: login,
                        Password: password
                    },
                    function (data, status) {
                        if (data == "OK") {
                            window.location.href = "/Home/Index";
                        }
                        else {
                            document.getElementById("contentModal").innerHTML = "Niepoprawny login lub hasło";
                        }
                    });
            });
</script>

</html>